<Window x:Class="CharlieProject.View.Windows.popup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CharlieProject.View.Windows"
    mc:Ignorable="d"
	WindowStartupLocation="CenterScreen"
	Height="200" Width="400" Background="#d43900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions> 
        <Grid.RowDefinitions> 
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="popupWindow"  Foreground="White" TextAlignment="Center" Background="#000000FF" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <Button Content="OK" Height="30" Width="70" Foreground="#d43900" Background="#fff" VerticalAlignment="Bottom"  Grid.Row="1" Click="Close_Click" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
